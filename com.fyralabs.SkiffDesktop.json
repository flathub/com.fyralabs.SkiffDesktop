{
  "app-id": "com.fyralabs.SkiffDesktop",
  "runtime": "org.gnome.Platform",
  "runtime-version": "45",
  "sdk": "org.gnome.Sdk",
  "command": "com.fyralabs.SkiffDesktop",
  "finish-args": [
    "--socket=wayland",
    "--socket=fallback-x11",
    "--share=ipc",
    "--device=dri",
    "--share=network"
  ],
  "cleanup": [
    "/cache",
    "/man",
    "/share/aclocal",
    "/share/devhelp",
    "/lib/systemd",
    "/include",
    "/lib/pkgconfig",
    "/lib/libvala*",
    "/share/gtk-doc",
    "/share/man",
    "/share/vala",
    "*.a",
    "*.la"
  ],
  "modules": [
    {
      "name": "com.fyralabs.SkiffDesktop",
      "builddir": true,
      "buildsystem": "meson",
      "config-opts": ["-Ddevelopment=false"],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/FyraLabs/skiff-desktop.git",
          "tag": "0.1.3",
          "commit": "882d59418aadc882310b2ed46b476c66c72d3821"
        }
      ],
      "modules": [
        {
          "name": "stylesheet",
          "buildsystem": "meson",
          "sources": [
            {
              "type": "git",
              "url": "https://github.com/tau-OS/tau-helium.git",
              "tag": "1.5.10",
              "commit": "9f4b3e0966bbf06dcacfdedbd096c52cae7be146"
            }
          ],
          "modules": [
            {
              "name": "sass",
              "buildsystem": "simple",
              "build-commands": [
                "install -D -m755 sass ${FLATPAK_DEST}/bin/sass"
              ],
              "sources": [
                {
                  "type": "archive",
                  "url": "https://github.com/sass/dart-sass/releases/download/1.53.0/dart-sass-1.53.0-linux-x64.tar.gz",
                  "sha256": "c9d819e5e42c939c80b7b19f6142574a6c899425dae1f353b45cb98ee6565174",
                  "only-arches": ["x86_64"]
                },
                {
                  "type": "archive",
                  "url": "https://github.com/sass/dart-sass/releases/download/1.53.0/dart-sass-1.53.0-linux-arm64.tar.gz",
                  "sha256": "0b19824ea688dcfb4474c51c42cb010ca3ba20aaf3e09480c5d995f5ab2886ba",
                  "only-arches": ["aarch64"]
                }
              ]
            }
          ]
        },
        {
          "name": "libhelium",
          "buildsystem": "meson",
          "config-opts": [
            "-Dstylesheet=false",
            "-Ddemo=false",
            "-Dvaladoc=false",
            "-Dgidoc=false",
            "--wrap-mode=nodownload"
          ],
          "sources": [
            {
              "type": "git",
              "url": "https://github.com/tau-OS/libhelium.git",
              "tag": "1.8.1",
              "commit": "89776937785b2cba48cc884c64b841f623f0be17"
            }
          ]
        },
        {
          "name": "blueprint-compiler",
          "buildsystem": "meson",
          "sources": [
            {
              "type": "git",
              "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
              "tag": "v0.6.0",
              "commit": "9adcab2d225fd6435edc85c72a0b67e33880e00b"
            }
          ],
          "cleanup": ["*"]
        }
      ]
    }
  ]
}
